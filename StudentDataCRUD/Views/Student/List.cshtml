@model List<StudentDataCRUD.Models.Student>
@{
    ViewData["Title"] = "Display Student";
}
<h1>Display Students</h1>
<table class=" table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Course</th>
            <th>Registered</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Course</td>
                <td>@student.Subscribed</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
           
            </tr>
        }
    </tbody>
</table>
