@model StudentDataCRUD.Models.Student

@{
    ViewData["Title"] = "Edit ";
}
<h1>Edit Student</h1>
<hr />
@if (Model is null)
{
    <p1>No student was found</p1>
}
else
{
<div class="container table table-light">
    <div class="row justify-content-center">
        <form method="post" class="col-12 col-md-6">
            <div class="mt-3">
                <label for="Id" class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="mt-3">
                <label for="FirstName" class="form-label" >First Name</label>
                <input type="text" class="form-control" asp-for="FirstName" required />
            </div>
            <div class="mt-3">
                <label for="LastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" required />
            </div>
            <div class="mt-3">
                <label for="Course" class="form-label">Course Name</label>
                    <input type="text" class="form-control" asp-for="Course" required />
            </div>
            <div class="mt-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="Subscribed" id="Subscribed" required />
                <label class="form-check-label" for="Subscribed">Registered</label>
            </div>
            <div class="d-md-flex justify-content-center ">
                
                        <button type="submit" class="btn btn-primary w-15">Edit</button>

                    <button type="submit" class="btn btn-danger w-15 ms-3" asp-action="Delete" asp-controller="Student">Delete</button>
             
                
            </div>
        </form>
    </div>
</div>
}



